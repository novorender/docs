{
  "name": "novorender-api-docs",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": ">=16.14"
  },
  "scripts": {
    "docusaurus": "docusaurus",
    "start": "docusaurus start --port 3001",
    "build": "npm run validate-snippets && npm run clone-api-repo && docusaurus build --out-dir ../build/v2",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "validate:json-config": "ajv validate -s scene-screenshot-gen/schema.json -d scene-screenshot-gen/config.json",
    "gen:demo-screenshots": "tsc -p scene-screenshot-gen/tsconfig.json && node scene-screenshot-gen/index.js",
    "validate-and-gen": "npm run validate:json-config && npm run gen:demos-screenshots --",
    "validate-snippets": "npx --no-install tsc -p demo-snippets/tsconfig.json",
    "lint": "eslint src/ demo-snippets/ --max-warnings=0",
    "del-api-repo-clone": "rm -rf ts",
    "clone-api-repo": "npm run del-api-repo-clone && git clone -b main --single-branch https://github.com/novorender/ts ts --depth 1",
    "postinstall": "node scripts/extract-exports.js && npm run merge-decl-files && npm run clone-api-repo",
    "merge-decl-files": "dts-bundle --name @novorender/api --main ./node_modules/@novorender/api/types/index.d.ts --out ./static/api/types/index.d.ts"
  },
  "dependencies": {
    "@cmfcmf/docusaurus-search-local": "1.1.0",
    "@docusaurus/core": "2.4.1",
    "@docusaurus/preset-classic": "2.4.1",
    "@docusaurus/theme-live-codeblock": "2.4.1",
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/free-solid-svg-icons": "6.4.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "@mdx-js/react": "1.6.22",
    "@monaco-editor/react": "4.5.1",
    "@novorender/api": "file:ts/dist",
    "@novorender/data-js-api": "0.2.25",
    "@novorender/measure-api": "0.0.143",
    "@novorender/webgl-api": "0.4.59",
    "allotment": "1.19.2",
    "clsx": "1.2.1",
    "monaco-editor": "0.40.0",
    "raw-loader": "4.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-tiny-popover": "7.2.4",
    "react-transition-group": "4.4.5"
  },
  "devDependencies": {
    "@docusaurus/eslint-plugin": "2.4.1",
    "@docusaurus/module-type-aliases": "2.4.1",
    "@tsconfig/docusaurus": "1.0.6",
    "@tsconfig/node16": "1.0.3",
    "@types/puppeteer": "5.4.6",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "ajv-cli": "5.0.0",
    "buffer": "6.0.3",
    "copy-webpack-plugin": "11.0.0",
    "css-minimizer-webpack-plugin": "4.1.0",
    "docusaurus-plugin-typedoc": "1.0.0-next.14",
    "dts-bundle": "^0.7.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-react": "^7.32.2",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "path-browserify": "1.0.1",
    "prettier": "^2.8.8",
    "process": "0.11.10",
    "puppeteer": "13.5.2",
    "stream-browserify": "3.0.0",
    "string_decoder": "1.3.0",
    "typedoc": "0.24.8",
    "typedoc-plugin-markdown": "4.0.0-next.18",
    "typescript": "^5.0.0-beta",
    "url": "0.11.0",
    "util": "0.12.4",
    "yargs": "17.4.1"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "**/*": "npx prettier --write --ignore-unknown"
  }
}
