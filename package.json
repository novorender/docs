{
  "name": "novorender-api-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npm run make-local-api-build",
    "postinstall": "node scripts/extract-exports.js && npm run merge-decl-files",
    "docusaurus": "docusaurus",
    "start": "docusaurus start",
    "build": "npm run validate-snippets && docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "make-local-api-build": "cd @novorender && npm i && npm start",
    "merge-decl-files": "node scripts/merge-decl-files.js",
    "validate-snippets": "npx --no-install tsc -p demo-snippets/tsconfig.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@cmfcmf/docusaurus-search-local": "^1.2.0",
    "@docusaurus/core": "3.5.2",
    "@docusaurus/preset-classic": "3.5.2",
    "@docusaurus/theme-live-codeblock": "^3.5.2",
    "@docusaurus/theme-mermaid": "^3.5.2",
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mdx-js/react": "^3.0.0",
    "@monaco-editor/react": "^4.6.0",
    "@novorender/data-js-api": "^0.2.28",
    "@novorender/webgl-api": "^0.4.61",
    "allotment": "^1.20.2",
    "clsx": "^2.0.0",
    "docusaurus-plugin-drawio": "^0.4.0",
    "monaco-editor": "^0.52.0",
    "prism-react-renderer": "^2.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-tiny-popover": "^8.1.2",
    "react-transition-group": "^4.4.5",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@docusaurus/eslint-plugin": "^3.5.2",
    "@docusaurus/module-type-aliases": "3.5.2",
    "@docusaurus/remark-plugin-npm2yarn": "^3.5.2",
    "@docusaurus/tsconfig": "3.5.2",
    "@docusaurus/types": "3.5.2",
    "@novorender/api": "file:@novorender/dist",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "copy-webpack-plugin": "^12.0.2",
    "docusaurus-plugin-typedoc": "^1.0.5",
    "dts-bundle": "^0.7.3",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "process": "^0.11.10",
    "typedoc": "^0.26.10",
    "typedoc-plugin-frontmatter": "^1.0.0",
    "typedoc-plugin-markdown": "^4.2.9",
    "typescript": "~5.5.2"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  },
  "overrides": {
    "@cmfcmf/docusaurus-search-local": {
      "@docusaurus/core": "^3.5.2"
    }
  }
}
