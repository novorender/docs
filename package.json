{
  "name": "novorender-api-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "preinstall": "npm run make-local-api-build",
    "postinstall": "node scripts/extract-exports.js && npm run merge-decl-files",
    "docusaurus": "docusaurus",
    "start": "docusaurus start --port 3001",
    "build": "npm run validate-snippets && npm run re-gen-api-docs && docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "typecheck": "tsc",
    "make-local-api-build": "cd @novorender && npm i && npm start",
    "merge-decl-files": "node scripts/merge-decl-files.js",
    "validate-snippets": "npx --no-install tsc -p demo-snippets/tsconfig.json",
    "prepare": "husky",
    "gen-api-docs": "docusaurus gen-api-docs all",
    "clean-api-docs": "docusaurus clean-api-docs all",
    "re-gen-api-docs": "npm run clean-api-docs && npm run gen-api-docs",
    "update-api-submodule": "git submodule update --remote --merge"
  },
  "dependencies": {
    "@cmfcmf/docusaurus-search-local": "^1.2.0",
    "@docusaurus/core": "^3.7.0",
    "@docusaurus/preset-classic": "^3.7.0",
    "@docusaurus/theme-live-codeblock": "^3.7.0",
    "@docusaurus/theme-mermaid": "^3.7.0",
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mdx-js/react": "^3.1.0",
    "@monaco-editor/react": "^4.6.0",
    "@novorender/data-js-api": "^2.0.0-beta.3",
    "allotment": "^1.20.2",
    "clsx": "^2.1.1",
    "docusaurus-plugin-drawio": "^0.4.0",
    "monaco-editor": "^0.52.2",
    "prism-react-renderer": "^2.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-tiny-popover": "^8.1.6",
    "react-transition-group": "^4.4.5",
    "rehype-katex": "^7.0.1",
    "remark-math": "^6.0.0"
  },
  "devDependencies": {
    "@docusaurus/eslint-plugin": "^3.7.0",
    "@docusaurus/module-type-aliases": "^3.7.0",
    "@docusaurus/remark-plugin-npm2yarn": "^3.7.0",
    "@docusaurus/tsconfig": "^3.7.0",
    "@docusaurus/types": "^3.7.0",
    "@novorender/api": "file:@novorender/dist",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "copy-webpack-plugin": "^12.0.2",
    "docusaurus-plugin-openapi-docs": "^4.3.3",
    "docusaurus-plugin-typedoc": "^1.2.3",
    "docusaurus-theme-openapi-docs": "^4.3.3",
    "dts-bundle": "^0.7.3",
    "eslint": "^9.19.0",
    "eslint-plugin-react": "^7.37.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "process": "^0.11.10",
    "typedoc": "^0.27.6",
    "typedoc-plugin-frontmatter": "^1.1.2",
    "typedoc-plugin-markdown": "^4.4.1",
    "typescript": "~5.7.3"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 3 chrome version",
      "last 3 firefox version",
      "last 5 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0"
  },
  "overrides": {
    "@cmfcmf/docusaurus-search-local": {
      "@docusaurus/core": "^3.7.0"
    }
  }
}
